%h3.centered Looking at #{@shift.name} on #{@shift.date.strftime('%a, %B %d, %Y')} at #{@shift.starttime.strftime('%I:%M %p')} - #{@shift.endtime.strftime('%I:%M %p')}
.span-10.push-7
  - unless flash[:notice].blank?
    %div.success
      = notice
  - unless flash[:alert].blank?
    %div.success
      = alert

  %strong= 'Giver\'s Name'
  %dd.success= @shift.name
  %strong= 'Giver\'s Email'
  %dd.info= @shift.email
  %strong= Shift.human_attribute_name :date
  %dd.info= @shift.date.strftime('%a, %B %d, %Y')
  %strong Time
  %dd.info #{@shift.starttime.strftime('%I:%M %p')} - #{@shift.endtime.strftime('%I:%M %p')}
  %strong= 'Taker\'s Name'
  %dd.error= @shift.takeingname
  %strong= 'Taker\'s Email'
  %dd.info= @shift.takingemail

%p.span-4.push-10.clear
  = link_to 'back', shifts_path, :class => "button"
  = link_to 'edit', edit_shift_path(@shift), :class => "button"

